               :alias => "Memory Total",
               :data  => "<%= @hostname %>.memory.total"

field :mid, :color => "green",
               :alias => "Memory Used",
               :data  => "<%= @hostname %>.memory.used"

field :long, :color => "yellow",
             :alias => "Memory Free",
             :data  => "<%= @hostname %>.memory.free"
